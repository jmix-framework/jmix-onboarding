<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.11.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="onboarding">
        <createTable tableName="STEP_TAG_LINK">
            <column name="STEP_ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_STEP_TAG_LINK"/>
            </column>
            <column name="TAG_ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_STEP_TAG_LINK"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="2" author="onboarding">
        <createTable tableName="TAG">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_TAG"/>
            </column>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="3" author="onboarding">
        <addForeignKeyConstraint baseColumnNames="STEP_ID" baseTableName="STEP_TAG_LINK"
                                 constraintName="FK_STETAG_ON_STEP" referencedColumnNames="ID"
                                 referencedTableName="STEP"/>
    </changeSet>
    <changeSet id="4" author="onboarding">
        <addForeignKeyConstraint baseColumnNames="TAG_ID" baseTableName="STEP_TAG_LINK"
                                 constraintName="FK_STETAG_ON_TAG" referencedColumnNames="ID"
                                 referencedTableName="TAG"/>
    </changeSet>
</databaseChangeLog>