<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<mainView xmlns="http://jmix.io/schema/flowui/main-view"
          title="msg://MainView.title">
    <actions>
        <action id="logout" type="logout"/>
    </actions>
    <appLayout>
        <navigationBar>
            <header id="header" className="jmix-main-view-header">
                <drawerToggle id="drawerToggle"
                              className="jmix-main-view-drawer-toggle"
                              themeName="contrast"
                              ariaLabel="msg://drawerToggle.ariaLabel"/>
                <h1 id="viewTitle" className="jmix-main-view-title"/>
            </header>
        </navigationBar>
        <drawerLayout>
            <section id="section" className="jmix-main-view-section">
                <h2 id="applicationTitle"
                    text="msg://applicationTitle.text"
                    className="jmix-main-view-application-title"/>
                <nav id="navigation"
                     className="jmix-main-view-navigation"
                     ariaLabel="msg://navigation.ariaLabel">
                    <listMenu id="menu"/>
                </nav>
                <footer id="footer" className="jmix-main-view-footer">
                    <userIndicator id="userIndicator"/>
                    <button id="logoutButton"
                            action="logout"
                            className="jmix-logout-button"/>
                </footer>
            </section>
        </drawerLayout>
    </appLayout>
</mainView>