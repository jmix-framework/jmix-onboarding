<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://stepDetailView.title"
      focusComponent="form">
    <data>
        <instance id="stepDc"
                  class="com.company.onboarding.entity.Step">
            <fetchPlan extends="_base">
                <property name="tags" fetchPlan="_base"/>
            </fetchPlan>
            <loader/>
        </instance>
        <collection class="com.company.onboarding.entity.Tag" id="tagsDc">
            <fetchPlan extends="_base"/>
            <loader id="tagsDl">
                <query>
                    <![CDATA[select e from Tag e
                    order by e.name asc]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="commitAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="stepDc">
            <textField id="nameField" property="name"/>
            <textField id="durationField" property="duration"/>
            <textField id="sortValueField" property="sortValue"/>
            <multiSelectComboBox property="tags" itemsContainer="tagsDc" id="tagsField"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="commitAndCloseBtn" action="commitAction"/>
            <button id="closeBtn" action="closeAction"/>
        </hbox>
    </layout>
</view>
